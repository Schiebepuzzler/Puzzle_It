<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.schiebepuzzle2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/start"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.activities.SplashScreen"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.activities.SelectPictureActivity"
            android:label="@string/title_activity_puzzle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.activities.PuzzleActivity"
            android:label="@string/title_activity_puzzle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.activities.HighscoreActivity"
            android:label="@string/title_activity_highscore" >
        </activity>
    </application>

</manifest>