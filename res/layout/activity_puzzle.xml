<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PuzzleActivity" >

    <TextView
        android:id="@+id/buttonGameCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_textview_counterText"/>
    
    <TextView
        android:id="@+id/buttonGameCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_textview_counter" 
        android:layout_alignParentRight="true"/>
    
    <TextView
        android:id="@+id/buttonGameTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_textview_timerText"
        android:layout_below="@id/buttonGameCounterText"/>
    
    <TextView
        android:id="@+id/buttonGameTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_textview_timer" 
        android:layout_alignParentRight="true"
        android:layout_below="@id/buttonGameCounter"/>

    <ImageView
        android:id="@+id/imageView1.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGameTimerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_1.2"/>
    
    <ImageView
        android:id="@+id/imageView1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageView1.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_1.1"/>
    
    <ImageView
        android:id="@+id/imageView1.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView1.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_1.3"/>
    
    <ImageView
        android:id="@+id/imageView2.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1.2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_2.2"/>
    
    <ImageView
        android:id="@+id/imageView2.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1.1"
        android:layout_toLeftOf="@+id/imageView2.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_2.1"/>
    
    <ImageView
        android:id="@+id/imageView2.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1.3"
        android:layout_toRightOf="@+id/imageView2.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_2.3"/>
    
    <ImageView
        android:id="@+id/imageView3.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2.2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_3.2"/>
    
    <ImageView
        android:id="@+id/imageView3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2.1"
        android:layout_toLeftOf="@+id/imageView3.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_3.1"/>
    
    <ImageView
        android:id="@+id/imageView3.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2.3"
        android:layout_toRightOf="@+id/imageView3.2"
        android:layout_below="@+id/buttonGameTimerText"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/game_imageview_3.3"/>
    
    <Button 
        android:id="@+id/ButtonGameBackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_button_backToMain"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
